<script type="text/javascript">

    var tax_data = [

    <?php for($i = date('n'); $i >= 0; $i--): ?>
            <?php if(isset($signUpDetails[$i])): ?>
                {"period": "<?php echo date('Y'); ?>-<?php echo $signUpDetails[$i]->month; ?>", "signups": <?php echo $signUpDetails[$i]->number; ?> },
            <?php else: ?>
                 {"period": "<?php echo date('Y'); ?>-<?php echo $i; ?>", "signups": 0 },
            <?php endif; ?>
    <?php endfor; ?>
    ];
    Morris.Line({
        element: 'hero-graph',
        data: tax_data,
        xkey: 'period',
        xLabels: "month",
        ykeys: ['signups'],
        labels: ['Signups']
    });


    var tax_data = [

    <?php for($i = date('n'); $i >= 0; $i--): ?>
        <?php if(isset($imageDetails[$i])): ?>
    {"period": "<?php echo date('Y'); ?>-<?php echo $imageDetails[$i]->month; ?>", "signups": <?php echo $imageDetails[$i]->number; ?> },
    <?php else: ?>
    {"period": "<?php echo date('Y'); ?>-<?php echo $i; ?>", "signups": 0 },
    <?php endif; ?>
    <?php endfor; ?>
    ];
    Morris.Line({
        element: 'image-upload',
        data: tax_data,
        xkey: 'period',
        xLabels: "month",
        ykeys: ['signups'],
        labels: ['Image Uploads']
    });
</script>
