<div class="comments-block">
    <div class="col-md-12">
        <h3 class="block-heading"><?php echo t('Comments'); ?></h3>

        <?php if(Auth::check() == true): ?>
        <?php echo Form::open(array('files'=> TRUE,'role'=>'form')); ?>
        <div class="form-group">
            <?php echo Form::textarea('comment','',array('class'=>"form-control",'rows'=>2,'placeholder'=>t('Comment'))); ?>
        </div>
        <div class="form-group">
            <?php echo Form::submit(t('Comment'),array('class'=>'btn btn-info')); ?>
        </div>
        <?php echo Form::close(); ?>
        <!--end of comment form-->
        <?php endif; ?>

        <?php foreach($comments as $comment): ?>
        <div class="media">
            <a class="pull-left" href="<?php echo url('user/'.$comment->user->username); ?>">
                <img class="media-object" src="<?php echo avatar($comment->user->avatar,75,75); ?>" alt="<?php echo $comment->user->fullname; ?>" style="width: 64px; height: 64px;" src="">
            </a>
            <div class="media-body">
                <h4 class="media-heading"><a href="<?php echo url('user/'.$comment->user->username); ?>"><?php echo e(ucfirst($comment->user->username)); ?></a> <span class="pull-right"><i class="comment-time fa fa-clock-o"></i> <abbr class="timeago comment-time" title="<?php echo date(DATE_ISO8601,strtotime($comment->created_at)); ?>"><?php echo date(DATE_ISO8601,strtotime($comment->created_at)); ?></abbr> </span></h4>
                <p><?php echo Smilies::parse(e($comment->comment)); ?></p>

                <?php if(Auth::check() == TRUE): ?>
                <a class="replybutton" id="box-<?php echo $comment->id; ?>"><?php echo t('Reply'); ?></a>

                <div class="commentReplyBox" id="openbox-<?php echo $comment->id; ?>">
                    <input type="hidden" name="pid" value="19">
                    <?php echo Form::textarea('comment','',array('id'=>'textboxcontent'.$comment->id,'class'=>"form-control",'rows'=>2,'placeholder'=>t('Comment'))); ?>
                    </br>
                    <button class="btn btn-info replyMainButton" id="<?php echo $comment->id; ?>"><?php echo t('Reply'); ?></button>
                    <a class="closebutton" id="box-<?php echo $comment->id; ?>"><?php echo t('Cancel'); ?></a>
                </div>
                <?php endif; ?>
                <!-- reply block stats here -->
                <?php foreach($comment->reply as $reply): ?>
                <hr/>
                <div class="media" id="reply-<?php echo $reply->id; ?>">
                    <a class="pull-left" href="<?php echo url('user/'.$reply->user->username); ?>">
                        <img class="media-object" src="<?php echo avatar($reply->user->avatar,64,64); ?>" alt="<?php echo $reply->user->fullname; ?>" style="width: 64px; height: 64px;" src="">
                    </a>
                    <div class="media-body">
                        <h4 class="media-heading"><a href="<?php echo url('user/'.$reply->user->username); ?>"><?php echo e(ucfirst($reply->user->fullname)); ?></a> <span class="pull-right"><i class="comment-time fa fa-clock-o"></i> <abbr class="timeago comment-time" title="<?php echo date(DATE_ISO8601,strtotime($comment->created_at)); ?>"><?php echo date(DATE_ISO8601,strtotime($reply->created_at)); ?></abbr> </span></h4>
                        <p><?php echo Smilies::parse(e($reply->reply)); ?></p>
                    </div>
                </div>
                <?php endforeach; ?>
                <!-- reply block ends here -->
            </div>
            <hr/>
        </div>
        <?php endforeach; ?>

        <div class="row">
            <?php echo $comments->links(array('class'=>'pagination')); ?>
        </div>
    </div>

