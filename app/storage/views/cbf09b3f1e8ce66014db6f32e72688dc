
<?php $__env->startSection('content'); ?>

    <h3 class="content-heading"><?php echo t('Notifications'); ?></h3>

    <?php foreach($notifications as $notice): ?>
	<?php if($notice->user): ?>
    <div class="media">
        <a class="pull-left" href="#">
            <img class="media-object" alt="<?php echo e($notice->user->fullname); ?>" src="<?php echo avatar($notice->user->avatar,64,64); ?>">
        </a>

        <div class="media-body">
            <h4 class="media-heading black"><a href="<?php echo url('user/'.$notice->user->username); ?>"><?php echo e($notice->user->username); ?></a>
                <span class="msg-time pull-right">
				<i class="glyphicon glyphicon-time"></i>
				<span><small><abbr class="timeago comment-time" title="<?php echo date(DATE_ISO8601,strtotime($notice->created_at)); ?>"><?php echo date(DATE_ISO8601,strtotime($notice->created_at)); ?></abbr>&nbsp;</small></span>
				</span>
            </h4>
            <?php if($notice->type == 'follow'): ?>
            <p>Started Following you</p>
            <?php elseif($notice->type == 'comment'): ?>
            <p>Commented on your image <a href="<?php echo url('image/'.$notice->image->id.'/'.$notice->image->slug); ?>"><?php echo e(ucfirst($notice->image->title)); ?></a></p>
            <?php elseif($notice->type == 'like'): ?>
            <p>Liked your image <a href="<?php echo url('image/'.$notice->image->id.'/'.$notice->image->slug); ?>"><?php echo e(ucfirst($notice->image->title)); ?></a></p>
            <?php elseif($notice->type == 'reply'): ?>
            <p>Replied on your comment <a href="<?php echo url('image/'.$notice->image->id.'/'.$notice->image->slug); ?>"><?php echo e(ucfirst($notice->image->title)); ?></a></p>
            <?php elseif($notice->type == 'follow'): ?>
            <p>Started Following Your</p>
            <?php endif; ?>

        </div>
    </div>
    <hr>
	<?php endif; ?>
    <?php endforeach; ?>
    <?php echo $notifications->links(); ?>
<?php $__env->stopSection(); ?>

